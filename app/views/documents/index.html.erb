<h1 class="text-center my-6" style="font-size: 2.5rem; font-weight: bold; text-transform: uppercase; letter-spacing: 2px; position: sticky; top: 0; background-color: rgba(238, 231, 237, 0); z-index: 1020;">
    My Documents
</h1>

<div class="container" style="max-width: 400px; margin: 41px auto; border-radius: 25px; padding: 20px; height: calc(72vh - 80px); background-color: inherit; overflow-y: auto; position: relative;">
  <div class="row">
    <div class="col-12">
      <% @documents.each do |document| %>
        <div class="card mb-3" style="border-radius: 25px; overflow: hidden; background-color: inherit; position: relative;">
          <% if document.photo.present? && document.photo.key.present? %>
            <div class="h-40" style="position: relative; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.82)), url('<%= cl_image_path(document.photo.key, height: 300, crop: :fill) %>'); height: 12vh; background-size: cover; background-position: center;">
              <div style="position: absolute; top: 10px; right: 10px; z-index: 1050;">
                <%= button_to document_path(document), method: :delete, data: { confirm: 'Are you sure?' }, style: 'border: none; background: none; color: red; font-size: 2rem;' do %>
                  <i class="fas fa-times"></i>
                <% end %>
              </div>
              <%= link_to group_document_path(document.group, document), style: 'text-decoration: none; color: inherit;' do %>
                <div style="position: absolute; bottom: 40px; left: 20px; color: white; font-weight: bold; font-size: 1.5rem;">
                  <%= document.title %>
                </div>
                <div style="position: absolute; bottom: 10px; left: 20px; color: white; font-weight: bold; font-size: 1.2rem;">
                  Group: <%= document.group.title %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="h-40 d-flex align-items-center justify-content-center" style="background-color: grey; height: 20vh; border-radius: 25px; position: relative;">
              <div style="position: absolute; top: 10px; right: 10px; z-index: 1050;">
                <%= button_to document_path(document), method: :delete, data: { confirm: 'Are you sure?' }, style: 'border: none; background: none; color: red; font-size: 2rem;' do %>
                  <i class="fas fa-times"></i>
                <% end %>
              </div>
              <p class="text-center text-white">No photo available</p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

