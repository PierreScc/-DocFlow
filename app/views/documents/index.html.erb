<!-- app/views/documents/index.html.erb -->
<h1 class="text-center my-4" style="font-size: 2.5rem; color: #6a1b9a; font-weight: bold; text-transform: uppercase; letter-spacing: 2px;">
  <i class="fas fa-file-alt"></i> Documents
</h1>

<div class="container" style="max-width: 1200px; margin: 0 auto; background-color: #EEE7ED; border-radius: 10px; padding: 20px;">
  <div class="row mb-4">
    <div class="col-12 text-right">
      <% if Group.any? %>
        <% first_group = Group.first %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <table class="table table-hover table-bordered table-striped align-middle">
          <thead style="background-color: #8e24aa; color: #ffffff;">
            <tr>
              <th scope="col">Title</th>
              <th scope="col">Category</th>
              <th scope="col" class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @documents.each do |document| %>
              <tr>
                <td style="font-weight: bold; font-size: 1.2rem; color: #6a1b9a;"><%= document.title %></td>
                <td style="font-size: 1rem; text-decoration: underline; color: #ab47bc;"><%= document.category %></td>
                <td class="text-center">
                  <%= link_to group_document_path(document.group, document), class: 'btn btn-outline-primary btn-sm mx-1', style: 'border-radius: 12px; padding: 6px 12px; color: #6a1b9a; border-color: #6a1b9a;' do %>
                    <i class="fas fa-eye"></i> Show
                  <% end %>
                  <%= button_to document_path(document), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm mx-1', form: { 'data-turbo': 'false' }, style: 'border-radius: 12px; padding: 6px 12px; color: #d32f2f; border-color: #d32f2f;' do %>
                    <i class="fas fa-trash-alt"></i> Delete
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
