<h1 class="text-center my-6" style="font-size: 2.5rem; color: #d4b6d3; font-weight: bold; text-transform: uppercase; letter-spacing: 2px; position: sticky; top: 0; background-color: rgba(238, 231, 237, 0); z-index: 1020;">
    My Documents
</h1>

<div class="container" style="max-width: 400px; margin: 41px auto; background-color: #EEE7ED; border-radius: 25px; padding: 20px; height: calc(80vh - 80px); overflow: hidden;">
    <div class="row mb-4">
        <div class="col-10 text-right">
            <% if Group.any? %>
                <% first_group = Group.first %>
            <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="table-container" style="border-radius: 25px; overflow: auto; height: calc(100vh - 210px);">
                <table class="table table-hover table-bordered table-striped align-middle" style="border-radius: 25px; overflow: hidden;">
                    <tbody>
                        <% @documents.each do |document| %>
                            <tr>
                                <td style="font-weight: bold; font-size: 1.2rem; color: #6a1b9a;">
                                    <%= link_to document.title, group_document_path(document.group, document), style: 'color: inherit; text-decoration: none;' %>
                                </td>
                                <td style="font-size: 1rem; text-decoration: underline; color: #ab47bc;"><%= document.category %></td>
                                <td class="text-center">
                                    <%= button_to document_path(document), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm mx-2', form: { 'data-turbo': 'false' }, style: 'border-radius: 12px; padding: 4px 8px; color: #d32f2f; border-color: #d32f2f;' do %>
                                        <i class="fas fa-trash-alt"></i>
                                    <% end %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
