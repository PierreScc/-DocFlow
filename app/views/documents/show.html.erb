<h1>Document Detail</h1>
<div>
  <div class="h-40"
    style="
      background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @document.photo.key, height: 300, crop: :fill %>');
      height: 20vh">
  </div>
  <h3><%= @document.title %></h3>
  <p>Category: <%= @document.category %></p>
  <p>Comment: <%= @document.comment %></p>
  <p>User: <%= @document.user.username %></p>
  <p>Group: <%= @document.group.title %></p>
</div>

<% if @document.assignements.any? %>
    <% @document.assignements.each do |assignement| %>
        Assigned to: <%= assignement.user.username %> - Comment: <%= assignement.comment %>
    <% end %>
<% end %>

<%= link_to 'Back', documents_path, class: "btn btn-secondary" %>
<%= link_to 'Assign this document', new_document_assignement_path(@document), class: "btn btn-primary" %>
