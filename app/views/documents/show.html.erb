<style>
        .fixed-bottom-icons {
            position: absolute;
            bottom: 20px;
            right: 20px;
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            width: calc(100% - 40px);
        }
    </style>
</head>
<body>

<h1 class="text-center my-6" style="font-size: 2.5rem; color: #d4b6d3; font-weight: bold; text-transform: uppercase; letter-spacing: 2px; position: sticky; top: 0; background-color: rgba(238, 231, 237, 0); z-index: 1020;">
   Details
</h1>

<div class="container" style="max-width: 400px; margin: 41px auto; background-color: #EEE7ED; border-radius: 25px; padding: 20px; height: calc(85vh - 80px); overflow: hidden; position: relative;">
  <% if @document.photo.present? && @document.photo.key.present? %>
    <div class="h-40 mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(@document.photo.key, height: 300, crop: :fill) %>'); height: 20vh; border-radius: 25px; background-size: cover; background-position: center;">
    </div>
  <% else %>
    <div class="h-40 mb-4 d-flex align-items-center justify-content-center" style="background-color: grey; height: 20vh; border-radius: 25px;">
      <p class="text-center text-white">No photo available</p>
    </div>
  <% end %>

  <div class="row">
    <div class="col-12">
      <h3 style="font-weight: bold; font-size: 1.5rem; color: #6a1b9a; margin-bottom: 25px;"><%= @document.title %></h3>
      <p><strong>User:</strong> <%= @document.user.username %></p>
      <p><strong>Group:</strong> <%= @document.group.title %></p>
      <% if @document.assignements.any? %>
        <h4 style="font-weight: bold; font-size: 1.2rem; color: #6a1b9a; margin-top: 20px;">Assignments</h4>
        <ul class="list-group mb-3">
          <% @document.assignements.each do |assignement| %>
            <li class="list-group-item">
              Assigned to: <%= assignement.user.username %> - Comment: <%= assignement.comment %>
            </li>
          <% end %>
        </ul>
      <% end %>
      <div class="fixed-bottom-icons" style="display: flex; justify-content: center;">
        <%= link_to documents_path, class: 'btn btn-outline-primary btn-sm mx-2', style: 'border-radius: 12px; padding: 6px 12px; color: #6a1b9a; border-color: #6a1b9a;' do %>
          <i class="fa-solid fa-arrow-left"></i>
        <% end %>
        <%= link_to 'Assign', new_document_assignement_path(@document), class: 'btn btn-outline-primary btn-sm mx-2', style: 'border-radius: 12px; padding: 6px 12px; color: #6a1b9a; border-color: #6a1b9a;' %>
        <button type="button" class="btn btn-outline-primary btn-sm mx-2" style="border-radius: 12px; padding: 6px 12px; color: #6a1b9a; border-color: #6a1b9a;" data-bs-toggle="modal" data-bs-target="#viewDocumentModal">
          <i class="fa-solid fa-arrows-to-eye"></i>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="viewDocumentModal" tabindex="-1" aria-labelledby="viewDocumentModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="viewDocumentModalLabel" style="font-size: 1.8rem; color: #6a1b9a; font-weight: bold;"><%= @document.title %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="text-align: center;">
        <% if @document.photo.present? && @document.photo.key.present? %>
          <%= image_tag cl_image_path(@document.photo.key, width: 800, crop: :fill), alt: @document.title, style: "max-width: 100%; height: auto; border-radius: 10px;" %>
        <% else %>
          <p>No photo available</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
