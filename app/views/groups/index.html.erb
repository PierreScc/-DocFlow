<h1 class="text-center my-4" style="font-size: 2.5rem; color: #6a1b9a; font-weight: bold; text-transform: uppercase; letter-spacing: 2px; position: sticky; top: 0; background-color: #EEE7ED; z-index: 1020;">
  <i class="fas fa-users"></i> Groups
</h1>

<div class="container" style="max-width: 1200px; margin: 0 auto; background-color: #EEE7ED; border-radius: 25px; padding: 20px; height: calc(100vh - 80px); overflow: hidden;">
  <div class="row">
    <div class="col-12">
      <div class="table-container" style="border-radius: 25px; overflow: auto; height: calc(100vh - 210px);">
        <table class="table table-hover table-bordered table-striped align-middle" style="border-radius: 25px; overflow: hidden;">
          <thead style="background-color: #8e24aa; color: #ffffff;">
            <tr>
              <th scope="col">Group Title</th>
                </tr>
                  </thead>
                    <tbody>
                      <% @groups.each do |group| %>
                        <tr>
                          <td style="font-weight: bold; font-size: 1.2rem; color: #6a1b9a;">
                          <div style="display: flex; justify-content: flex-start; align-items: flex-start;">
                        <% if group.photo.attached? %>
                      <%= image_tag url_for(group.photo), class: "image-doc" %>
                    <% end %>
                   <%= link_to group.title, group_path(group), style: 'color: #6a1b9a;' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
