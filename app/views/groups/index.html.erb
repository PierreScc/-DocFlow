<h1 class="text-center my-6" style="font-size: 2.5rem; font-weight: bold; text-transform: uppercase; letter-spacing: 2px; position: sticky; top: 0; background-color: rgba(238, 231, 237, 0); z-index: 1020;">
  <i class="fas fa-users"></i> Groups
</h1>

<div class="container" style="max-width: 400px; margin: 41px auto; background-color: inherit; border-radius: 25px; padding: 20px; height: calc(70vh - 80px); overflow-y: auto; position: relative;">
  <div class="row">
    <div class="col-12">
      <% @groups.each do |group| %>
        <div class="card mb-3" style="border-radius: 25px; overflow: hidden; background-color: inherit;">
          <% if group.photo.present? && group.photo.key.present? %>
            <%= link_to group_path(group), style: 'text-decoration: none; color: inherit;' do %>
              <div class="h-40" style="position: relative; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.85)), url('<%= cl_image_path(group.photo.key, height: 300, crop: :fill) %>'); height: 12vh; background-size: cover; background-position: center;">
                <div style="position: absolute; bottom: 20px; left: 20px; color: white; font-weight: bold; font-size: 1.5rem;">
                  <%= group.title %>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="h-40 d-flex align-items-center justify-content-center" style="background-color: grey; height: 20vh; border-radius: 25px;">
              <%= link_to group_path(group), style: 'text-decoration: none; color: inherit;' do %>
                <p class="text-center text-white">No photo available</p>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

