<body style="background: url('<%= asset_path("fallingdoc.png") %>') no-repeat center center fixed; background-size: cover; margin: 0; padding-top: 20px;">

<h1 class="members-title">Members</h1>


<style>
  .members-title {
    color: white;
    font-size: 4rem; /* Ajustez la taille selon vos besoins */
    text-align: center;
    margin-bottom: 50px; /* Ajustez cette valeur selon vos besoins */
    margin-top: 20px; /* Ajoutez cette ligne pour monter le titre */
  }

  .username {
    color: white;
    font-size: 1.2rem; /* Ajustez la taille selon vos besoins */
    margin-top: 10px;
  }

  .avatar {
    width: 60px; /* Ajustez cette valeur selon vos besoins */
    height: 60px; /* Ajustez cette valeur selon vos besoins */
    border-radius: 50%; /* Pour rendre l'avatar circulaire */
    margin-bottom: 10px;
  }

  .document-card {
    height: 100px;
    width: 300px; /* Adjust the height as needed */
  }
</style>

<div class="row">
  <% @group.users.each do |user| %>
    <div class="col-3 mb-4">
      <div class="member text-center">
        <% if user.photo.attached? %>
          <%= image_tag url_for(user.photo), class: "avatar", alt: "avatar" %>
        <% end %>
        <p class="username"><%= user.username %></p>
      </div>
    </div>
  <% end %>
</div>

<h2>Documents</h2>
<div class="row">
  <% @group.documents.each do |document| %>
    <div class="col-3 mb-4">
      <div class="document doccard">
        <% if document.photo.attached? %>
          <%= link_to group_document_path(@group, document) do %>
            <%= image_tag url_for(document.photo), class: "image-doc img-fluid" %>
            <h3 class="doc-title"><%= document.title %></h3>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<button type="button" style="margin-top: 70px; margin-bottom: 10px;" class="button-34" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Add members
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Members</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="<%= group_user_groups_path(@group) %>" method="post" class="form-example">
        <div class="modal-body">
          <div class="form-example">
            <% @users.each do |user| %>
              <div>
                <input type="checkbox" id="user_<%= user.id %>" name="user_id[]" value="<%= user.id %>" />
                <label for="user_<%= user.id %>" class="username"><%= user.username %></label>
              </div>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="button" data-bs-dismiss="modal">Close</button>
          <input type="submit" class="button-34" value="Add" style="padding: 8px 18px" />
        </div>
      </form>
    </div>
  </div>
</div>

<h2>Chatroom</h2>
<div class="chatroom">
  <div id="messages" class="messages">
    <% @messages.each do |message| %>
      <div class="message">
        <strong><%= message.user.username %>:</strong>
        <%= message.content %>
      </div>
    <% end %>
  </div>
  <%= form_with(model: [@group, @message], local: true) do |form| %>
    <div class="form-group">
      <%= form.text_area :content, rows: 3, class: "form-control", placeholder: "Type your message here..." %>
    </div>
    <div class="form-group mt-2">
      <%= form.submit "Send", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<style>
  .chatroom {
    margin-top: 20px;
    border: 1px solid #ccc;
    padding: 10px;
    border-radius: 10px;
    background-color: #fff;
  }

  .messages {
    max-height: 300px;
    overflow-y: auto;
  }

  .message {
    padding: 5px 0;
    border-bottom: 1px solid #eee;
  }
</style>
