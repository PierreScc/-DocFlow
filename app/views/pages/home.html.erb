<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a Group</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> <!-- Font Awesome for icons -->
    
    <script>
        function toggleSection(sectionId) {
            const section = document.getElementById(sectionId);
            section.style.display = section.style.display === 'none' ? 'block' : 'none';
        }
    </script>
</head>
<body>
    <div class="container">
        <a  class="icon-button" onclick="toggleSection('createGroupSection')"><i class="fas fa-users"></i></a>
        <a  class="icon-button" onclick="toggleSection('addDocumentSection')"><i class="fas fa-file-alt"></i></a>

        <div id="createGroupSection">
            <form action="/submit-group" method="POST" enctype="multipart/form-data">
                <div class="field">
                    <label for="document_id">Document ID:</label>
                    <input type="text" id="document_id" name="document_id" required>
                </div>

                <div class="field">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" required>
                </div>

                <div class="field">
                    <label for="category">Category:</label>
                    <input type="text" id="category" name="category" required>
                </div>

                <div class="actions">
                    <input type="submit" value="Create Group">
                </div>
            </form>
        </div>

        <div id="addDocumentSection" style="display: none;">
            <form action="/submit-document" method="POST" enctype="multipart/form-data">
                <div id="error_explanation">
                    <ul id="error_list"></ul>
                </div>

                <div class="field">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" required>
                </div>

                <div class="field">
                    <label for="user_id">User ID:</label>
                    <input type="text" id="user_id" name="user_id" required>
                </div>

                <div class="field">
                    <label for="category">Category:</label>
                    <input type="text" id="category" name="category" required>
                </div>

                <div class="field">
                    <label for="date">Date:</label>
                    <input type="date" id="date" name="date" required>
                </div>

                <div class="field">
                    <label for="deadline">Deadline:</label>
                    <input type="date" id="deadline" name="deadline" required>
                </div>

                <div class="field">
                    <label for="comment">Comment:</label>
                    <input type="text" id="comment" name="comment" required>
                </div>

                <div class="field">
                    <label for="photo">Upload Photo:</label>
                    <input type="file" id="photo" name="photo" accept="image/*" required>
                </div>

                <div class="actions">
                    <input type="submit" value="Add Document">
                </div>
            </form>
        </div>
    </div>

    <script>
        function toggleSection(sectionId) {
            const section = document.getElementById(sectionId);
            section.style.display = section.style.display === 'none' ? 'block' : 'none';
        }
    </script>
</body>
</html>

